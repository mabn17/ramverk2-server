{
  "name": "server",
  "version": "6.0.4",
  "description": "typescript express server",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run mongodb && bash reset-test.bash && sleep 4 && rm -rf .coverage .nyc_output && export NODE_ENV=test && nyc --cache false --reporter=clover --reporter=text mocha --timeout 15000 --require ts-node/register --exit './test/**/*.ts' && npm run stopMongodb",
    "test:ci": "bash reset-test.bash && sleep 4 && rm -rf .coverage .nyc_output && export NODE_ENV=test && nyc --cache false --reporter=clover --reporter=text mocha --timeout 15000 --require ts-node/register --exit './test/**/*.ts'",
    "start": "export NODE_ENV=dev && nodemon -x ts-node src/index.ts",
    "start:prod": "node build/index.js",
    "clean:build": "rm -rf build",
    "build": "tsc",
    "run:build": "npm run clean:build && npm run build",
    "test1": "docker-compose run node_latest npm test",
    "test2": "docker-compose run node_10 npm test",
    "test3": "docker-compose run node_8 npm test",
    "test4": "docker-compose run node_6 npm test",
    "mongodb": "docker-compose run -d --name mongodb mongodb",
    "stopMongodb": "docker stop mongodb && docker rm mongodb"
  },
  "author": "Martin Borg",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/mongoose": "^5.5.12",
    "@types/morgan": "^1.7.36",
    "@types/sqlite3": "^3.1.5",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "socket.io": "^2.4.0",
    "showdown": "^1.9.1",
    "sqlite3": "^4.0.9",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.9",
    "@types/showdown": "^1.9.3",
    "@types/socket.io": "^2.1.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mem": ">=4.0.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13"
  }
}
